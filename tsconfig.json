{
    "compilerOptions": {
        /* Core settings */
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "build",
        "incremental": true,
        "composite": true,

        /* Interop & strictness */
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        /* Decorators support */
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        /* Debugging & declarations */
        "declaration": true,
        "sourceMap": true,

        /* Ensure Node globals like process are available */
        "types": ["node"]
    },
   "include": ["src/**/*.ts", "app.ts"],
    "exclude": ["node_modules", "build"]
}
